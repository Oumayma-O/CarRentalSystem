@model IEnumerable<CarRentalSystem.Models.Driver>
@{
	ViewData["Title"] = "Driver";
}
<h2> Driver Page </h2>
<div class="container">
	<div class="row">
		<div class="mt-3 p-3 shadow rounded">
			<div class="d-flex justify-content-between mb-3 p-3 ">
				<h3 class="text-info">Driver List </h3>
				@Html.ActionLink("Add New Driver", "Add", "Driver", null , new { @class = "btn btn-sm btn-primary" })
			</div>
			<div class="p-3">
				<table class="table table-responsive table-bordered  text-center">
					<thead class="text-info">
						<tr>
							<th>Id</th>
							<th>DriverName</th>
							<th>Address</th>
							<th>Age</th>
							<th>Experience</th>
							<th>Mobile Number</th>
	
						</tr>
					</thead>
					<tbody>
						@foreach(var item in Model){
						<tr>
							<td>@item.Id</td>
							<td>@item.DriverName</td>
							<td>@item.Address</td>
							<td>@item.Age</td>
							<td>@item.Experience</td>
							<td>@item.MobileNo</td>
							<td>
								@*@Html.ActionLink("Edit", "Edit", "Driver", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
								@Html.ActionLink("Details", "Details", "Driver", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
								@Html.ActionLink("Delete", "Delete", "Driver", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })*@
							</td>
						</tr>
						}
					</tbody>

			</div>
		</div>
	</div>



